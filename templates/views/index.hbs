            <p id="result-1"></p>
            <p id="result-2"></p>
            
            <div class="container">
                <canvas id="myChart"></canvas>
                <br>
                <canvas id="myChart2"></canvas>
            </div>

        </div>

        {{>footer}}

        <script src="https://cdn.jsdelivr.net/npm/chart.js@2.8.0"></script>
